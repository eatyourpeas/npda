{
    "configurations": [
        {
            "name": "Python: Django Docker",
            "type": "debugpy",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}", // local project folder
                    "remoteRoot": "/app" // Path inside the Docker container
                }
            ],
            "justMyCode": false
        }
    ]
}